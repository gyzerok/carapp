doctype html
html
  head
    title= title

    // Viewport mobile tag for sensible mobile support
    meta(name="viewport",content="width=device-width, initial-scale=1, maximum-scale=1")

    // STYLES
    link(rel="stylesheet", href="/styles/main.css")
    // STYLES END

  body
    div#body
    script#layout(type="text/template")
        block body

    // The linker searches for this tag and adds js.  If there's no linker, we point to sails.io.js
    // SCRIPTS
    script(src="/js/dependencies/sails.io.js")
    script(src="/js/dependencies/json2.js")
    // SCRIPTS END
    script(src="/js/dependencies/require.js" data-main="/js/main")
